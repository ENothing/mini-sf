<cu-custom bgColor="bg-gradual-red" isCustom="{{true}}">
  <view slot="content">确认订单</view>
</cu-custom>


<navigator url="/pages/personal/address/address?status=1" hover-class="none">
  <view class='address_contaniner'>
    <view>
      <view class="flex justify-between">
        <view>
          <text class='cuIcon-location' decode='true'>&emsp;</text>
          <text class="reveiver_name">{{default_address.name}}</text>
        </view>
        <view>
          <text class='phone' decode='true'>{{default_address.mobile}}&ensp;</text>
          <text class='cuIcon-right text-gray'></text>
        </view>
      </view>
    </view>
    <view class='address text-gray'>
      <text>{{default_address.province}}{{default_address.city}}{{default_address.district}}{{default_address.detail_address}}</text>
    </view>
  </view>
</navigator>


<view class="cu-list menu sm-border">

  <view class="cu-item">
    <view class="grid col-2">
      <view class="goods_thumb_container">
        <image class="goods_thumb" src="{{goods_spu.thumb}}"></image>
      </view>
      <view class="miscellaneous_container">
        <text class="goods_name">{{goods_spu.goods_name}}</text>
        <view class="size_num_price_container">
          <view class="flex  justify-between">
            <view>
              <text class="size_and_num" decode="true">码数：{{goods_spu.name}}&ensp;数量 x 1</text>
            </view>
            <view>
              <text class="price text-bold text-black text-price">{{goods_spu.price}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="cu-item">
    <view class="content">
      <text class="title">顺丰速运</text>
    </view>
    <view class="action">
      <text class="text-grey text-sm">￥{{goods_spu.post_price}}</text>
    </view>
  </view>

  <view class="cu-item arrow" bindtap="showModal" data-target="bottomModal">
    <view class="content">
      <text class="title">优惠券</text>
    </view>
    <view class="action">
      <text class="text-grey text-sm">-￥110</text>
    </view>
  </view>
  <view class="cu-modal bottom-modal {{modalName=='bottomModal'?'show':''}}">
    <view class="cu-dialog">
      <view class="cu-bar bg-white">
        <view class="action ">确定</view>
        <view class="action text-grey" bindtap="hideModal">取消</view>
      </view>
      <view class="padding-xl">
        Modal 内容。
      </view>
    </view>
  </view>




  <view class="cu-item">
    <view class="content">
      <text class="title">合计支付</text>
    </view>
    <view class="action">
      <text class="text-price text-bold text-xl">2669</text>
    </view>
  </view>

</view>














<view class='cu-tabbar-height'></view>


<view class="cu-bar bg-white tabbar border shop foot">
  <view class='total_price_container text-red'>
    <text class="total_price_text">实付款：￥</text>
    <text class='total_price'>2669</text>
  </view>
  <view class="confirm-button bg-red submit" bindtap="goToSubmit">提交订单</view>
</view>