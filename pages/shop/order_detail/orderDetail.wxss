.order_status {
  height: 150rpx;
  background: #ee4662;
}

.o_status {
  color: #fff;
  padding: 30rpx 0 0 50rpx;
  font-weight: bold;
  font-size: 1.2rem;
}

.address_contaniner {
  padding: 24rpx 26rpx 30rpx 26rpx;
  line-height: 47rpx;
  background: #fff;
  border-bottom: 4rpx solid transparent;
}

.reveiver_name {
  font-weight: bold;
}

.cuIcon-deliver {
  font-size: 1.1rem;
}

.cuIcon-location {
  font-size: 1.1rem;
}

.phone {
  font-weight: bold;
}

.cuIcon-right {
  font-size: 0.9rem;
}

.address {
  padding-left: 60rpx;
  font-size: 0.85rem;
}

.deliver_contaniner {
  padding: 24rpx 26rpx 30rpx 26rpx;
  line-height: 47rpx;
  background: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.cuIcon-location {
  font-size: 1.1rem;
}

.deliver_follow {
  color: #adabab;
}

.cuIcon-right {
  font-size: 0.9rem;
}

.deliver_time {
  padding-left: 60rpx;
  font-size: 0.85rem;
}

.order_goods_container {
  height: 208rpx;
  width: 90%;
  margin: auto;
  margin-top: 20rpx;
  display: flex;
  padding: 10rpx 30rpx 10rpx 30rpx;
}

.goods_img {
  width: 30%;
  height: 100%;
  border: 0.2rpx solid #f1f1f1;
}

.goods_info {
  width: 70%;
  padding-left: 20rpx;
}

.goods_title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods_param {
  padding-top: 15rpx;
}

.goods_size {
  padding-top: 12rpx;
  font-size: 0.75rem;
  color: #000;
}

.goods_num {
  font-size: 0.75rem;
  color: #000;
}

.goods_price {
  font-weight: bold;
  font-size: 1rem;
  color: #000;
}

.order_info {
  margin-top: 20rpx;
}

.order_info_title {
  font-size: 0.9rem !important;
}

.order_info_container {
  background: #fff;
}

.order_info_item {
  padding: 10rpx 50rpx;
}

.order_price_container {
  border-bottom: 8rpx solid #f1f1f1;
}

.order_price {
  font-size: 1.2rem;
  font-weight: bold;
}

.order_item_1.order_item_2.order_item_3 {
  font-size: 0.8rem;
}

.order_item_2 {
  color: #9b9b9b;
}

.modal-button {
  background-color: rgb(247, 247, 247);
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  /* display: inline-block; */
  line-height: unset;
  font-size: 0.75rem;
  color: rgb(233, 104, 66)
}

.modal-button::after {
  /*button的边框样式是通过::after方式实现的*/
  border: none;
}

.modal-button-hover {
  /*点击后样式*/
  color: #f1f1f1;
  background-color: rgb(247, 247, 247);
}
