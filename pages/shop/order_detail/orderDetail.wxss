.order_goods_container {
  height: 208rpx;
  width: 90%;
  margin: auto;
  margin-top: 20rpx;
  display: flex;
  padding: 10rpx 30rpx 10rpx 30rpx;
}

.goods_img {
  width: 30%;
  height: 100%;
  border: 0.2rpx solid #f1f1f1;
}

.goods_info {
  width: 70%;
  padding-left: 20rpx;
}

.goods_title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


.goods_param {
  padding-top: 15rpx;
}
.goods_size {
  padding-top: 12rpx;
  font-size: .75rem;
  color: #000
}

.goods_num{
  font-size: .75rem;
  color: #000
}
.goods_price{
  font-weight: bold;
