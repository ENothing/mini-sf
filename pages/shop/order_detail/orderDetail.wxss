  font-size: 1.2rem;
}

.address_contaniner {
  padding: 24rpx 26rpx 30rpx 26rpx;
  line-height: 47rpx;
  background: #fff;
  border-bottom: 4rpx solid transparent;
}

.reveiver_name {
  font-weight: bold;
}

.cuIcon-deliver {
  font-size: 1.1rem;
}

.cuIcon-location {
