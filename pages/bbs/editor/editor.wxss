@import "/editor/lib/weui.wxss";
@import "./assets/iconfont.wxss";

.container {
  position: absolute; 
  height: 400px !important;
  left: 0; 
  width: 100%;
  padding: 0 0 100px 0
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  /* border: 1px solid #000; */
  background: #fff;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  /* position: fixed; */
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border: 1px solid #ECECEC; */
  border-left: none;
  border-right: none;
}


.cu-bar.foot{

  box-shadow: unset

}
